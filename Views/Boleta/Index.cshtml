@model CASA_CAMBIO.Models.ClienteModel

@{
    ViewData["Title"] = "Boleta";
}

<h2>Datos Personales</h2>
<form asp-action="Boleta" method="post">
    <input type="hidden" asp-for="Transaccion.MonedaOrigen" />
    <input type="hidden" asp-for="Transaccion.MonedaDestino" />
    <input type="hidden" asp-for="Transaccion.Cantidad" />
    <input type="hidden" asp-for="Transaccion.Resultado" />
    <input type="hidden" asp-for="Transaccion.TipoCambio" />

    <div class="form-group">
        <label asp-for="NombreCompleto">Nombre Completo:</label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DNI">DNI:</label>
        <input asp-for="DNI" class="form-control" />
        <span asp-validation-for="DNI" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Generar Boleta</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}